{
  "name": "@wonse/eslint-flat-config",
  "private": true,
  "version": "1.0.0",
  "description": "Shared ESLint configs for modern projects",
  "author": {
    "name": "Wonse Shin",
    "email": "sinwonse@gmail.com",
    "url": "https://github.com/shinwonse"
  },
  "homepage": "https://github.com/shinwonse/eslint-flat-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinwonse/eslint-flat-config.git"
  },
  "bugs": {
    "url": "https://github.com/shinwonse/eslint-flat-config/issues"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "test": "eslint \"test/fixtures/**/*.{js,ts}\" --config test/eslint.config.js",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "eslint": ">=9.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.30",
    "eslint": "^9.19.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "^2.3.4"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  }
}
