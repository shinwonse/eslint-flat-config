{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@wonse/eslint-config",
  "extends": "@wonse/tsconfig/tsconfig-node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "packages/**/*", "*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
