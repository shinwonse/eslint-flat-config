{
  "name": "@wonse/eslint-js",
  "version": "1.1.0",
  "description": "Shared ESLint config for JavaScript projects",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Wonse Shin",
    "email": "sinwonse@gmail.com",
    "url": "https://github.com/shinwonse"
  },
  "homepage": "https://github.com/shinwonse/eslint-flat-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinwonse/eslint-flat-config.git"
  },
  "bugs": {
    "url": "https://github.com/shinwonse/eslint-flat-config/issues"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "eslint": ">=9.2.0"
  },
  "dependencies": {
    "@eslint/js": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^2.2.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "globals": "^14.0.0"
  },
  "devDependencies": {
    "@types/eslint": "catalog:",
    "@types/eslint__js": "catalog:",
    "@wonse/tsconfig": "catalog:",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "scripts": {
    "build": "tsup-node --minify",
    "dev": "tsup-node --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}
